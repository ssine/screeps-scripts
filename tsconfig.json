{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "newLine": "LF",
    "rootDir": "./src/",
    "outDir": "./dist/compile/",
    "target": "es6",
    "declaration": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    ".git",
    "node_modules"
  ]
}